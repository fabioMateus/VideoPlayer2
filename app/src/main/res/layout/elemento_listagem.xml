<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/MovieImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/MovieNameTextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/MovieImageView"
        android:text="TextView"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MovieYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MovieNameTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/YearLabel"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/YearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MovieNameTextView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/MovieImageView"
        android:text="Year:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MovieNameTextView"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/MovieYearTextView"
        android:text="Duration:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MovieDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MovieNameTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/DurationLabel"
        android:text="120min"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/MovieCategorieTextView"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/YearLabel"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/MovieImageView"
        android:text="TextView"
        android:textSize="16sp" />
</RelativeLayout>